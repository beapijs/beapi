{
	"name": "@beapijs/core",
	"version": "0.1.0",
	"description": "A thinly abstracted wrapper around the scripting API",
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"lint": "prettier --check . && cross-env TIMING=1 eslint src --ext .mjs,.js,.ts --format=pretty",
		"format": "prettier --write . && cross-env TIMING=1 eslint src --ext .mjs,.js,.ts --fix --format=pretty",
		"prepack": "yarn build && yarn lint",
		"changelog": "git cliff --prepend ./CHANGELOG.md -u -c ./cliff.toml -r ../../ --include-path 'packages/core/*'",
		"release": "cliff-jumper"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"typings": "./dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"directories": {
		"lib": "src"
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@favware/cliff-jumper": "^1.10.0",
		"@types/node": "18.15.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.36.0",
		"eslint-config-neon": "^0.1.40",
		"eslint-formatter-pretty": "^4.1.0",
		"prettier": "^2.8.4",
		"tsup": "^6.6.3",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": ">=16.9.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
