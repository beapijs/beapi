{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sneak": {
      "states": {
        "default": {
          "transitions": [
            {
              "scroll": "query.is_sneaking"
            }
          ],
          "on_exit": ["/tag @s add \"beapi:sneek\""]
        },
        "scroll": {
          "transitions": [
            {
              "default": "!query.is_sneaking"
            }
          ],
          "on_exit": ["/tag @s add \"beapi:unsneek\""]
        }
      }
    }
  }
}
